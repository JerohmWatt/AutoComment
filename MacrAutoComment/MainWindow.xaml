<Window x:Class="MacrAutoComment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MacrAutoComment"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="MacrAutoComment" Height="150" Width="250">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal">
                <Label>Auteur : </Label>
                <TextBox Name="TextBoxAuteur" Width="100"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Label>Version :</Label>
                <TextBox Name="TextBoxVersion" Width="100"></TextBox>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
